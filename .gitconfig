[user]
    name = Scott Nowers
    email = scott.nowers@gmail.com

[interactive]
    singlekey = true

[github]
    user = snowers

[core]
    pager = most
    editor = /usr/bin/vim -u ~/.vim/vimrc.basic

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    grep = auto

[branch]
    autosetupmerge = always
    autosetuprebase = always

[include]
    path = .gitconfig.local

[push]
    default = matching

[pull]
    default = current

[alias]
    co = checkout
    cob = checkout -b
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    plog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
